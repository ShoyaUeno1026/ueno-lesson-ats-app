<div class="row">
  <div class="col-lg-8">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h2"><%= t(".title") %></h1>
    </div>

    <div id="jobs">
      <% @jobs.each do |job| %>
        <div class="card mb-4">
          <%= link_to job_path(job), class: "card-body nav-link" do %>
            <div>
              <h4 class="p-1 text-success fw-semibold"><%= job.position_name %></h4>
            </div>
            <div>
              <div>
                <i class="bi bi-building-fill me-2"></i>
                <span><%= job.account.name %></span>
              </div>
              <div class="bg-body-secondary">
                <% if job.description.present? %>
                  <span><%= truncate(strip_tags(job.description), length: 50) %></span>
                <% else %>
                  <span><%= job.description %></span>
                <% end %>
              </div>
              <div>
                <i class="bi bi-currency-yen me-2"></i>
                <span><%= job.salary_to_text %></span>
              </div>
              <div>
                <i class="bi bi-geo-alt-fill me-2"></i>
                <td class="fixed-text"><%= job.location %></td>
              </div>
              <div class="d-flex justify-content-end">
                <i class="bi bi-clock me-2"></i>
                <td><%= time_ago_in_words(job.created_at) %>Ââç</td>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>