<div id="match_histories">
  <div class="text-nowrap table-responsive">
  <table class="table table-hover table-fixed">
    <thead>
      <tr>
        <th>更新日時</th>
        <th>事業所の名前</th>
        <th>職種名</th>
        <th>候補者名</th>
        <th>選考フロー</th>
        <th>更新者</th>
      </tr>
    </thead>
    <tbody>
      <% @match_histories.each do |match_history| %>
        <tr>
          <td><%= l match_history.created_at %></td>
          <td><%= match_history.account&.name %></td>
          <td><%= match_history.job&.position_name %></td>
          <td>
            <%= match_history.candidate&.name %></td>
          <td><%= match_history.job_pipeline_stage&.name %></td>
          <td>
            <%= image_tag image_path(match_history.user, size:40), height: 20, width: 20, class: "rounded" %>
            <%= match_history.user&.name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>