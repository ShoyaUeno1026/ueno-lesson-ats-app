<%= form_with(model: account) do |form| %>
  <%= render "shared/error_messages", resource: account %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label" %>
    <%= form.hidden_field :image, value: account.image.signed_id if account.image.attached? %>
    <%= form.file_field :image, accept: "image/*", direct_upload: true %>
  </div>

  <%= image_tag image_path(form.object), class: "rounded border shadow-sm d-block mx-auto my-3" %>

  <div class="mb-3 d-grid gap-2 col-6 mx-auto">
    <%= form.submit t("update"), class: "btn btn-primary" %>
  </div>
<% end %>
