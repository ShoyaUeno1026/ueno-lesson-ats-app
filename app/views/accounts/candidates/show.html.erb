<div class="mb-3">
  <%= link_to t("back"), account_candidates_path(@account) %>
</div>

<div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
  <%= tag.h1 truncate(@candidate.name), class: "h2", title: @candidate.name do %>
    <%= image_tag image_path(@candidate, size: 40), height: 40, width: 40, class: "rounded me-2" %>
    <%= truncate(@candidate.name) %>
  <% end %>
  <div class="d-flex gap-2">
    <%= link_to t("edit"), edit_account_candidate_path(@account, @candidate), class: "btn btn-primary" %>
    <%= button_to t("destroy"), [@account, @candidate], data: { turbo_confirm: t("are_you_sure") }, method: :delete, class: "btn btn-outline-danger" %>
  </div>
</div>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="detail-tab" data-bs-toggle="tab" data-bs-target="#detail-tab-pane" type="button" role="tab" aria-controls="detail-tab-pane" aria-selected="false"><%= t(".detail") %></button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="comments-tab" data-bs-toggle="tab" data-bs-target="#comments-tab-pane" type="button" role="tab" aria-controls="comments-tab-pane" aria-selected="false"><%= t(".comments", count: 0) %></button>
  </li>
</ul>
<div class="tab-content" id="myTabContet">
  <%# 詳細 %>
  <div class="tab-pane fade show active" id="detail-tab-pane" role="tabpanel" aria-labelledby="detail-tab" tabindex="0">
    <%= render partial: "candidate", locals: {candidate: @candidate} %>
  </div>
  <%# コメント %>
  <div class="tab-pane fade" id="comments-tab-pane" role="tabpanel" aria-labelledby="comments-tab" tabindex="0">
    <p>TODO</p>
  </div>
</div>