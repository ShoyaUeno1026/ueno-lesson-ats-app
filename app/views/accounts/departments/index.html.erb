<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2"><%= t(".title") %></h1>
  <%= link_to t("new"), new_account_department_path(@account), class: "btn btn-primary" %>
</div>

<div id="departments">
  <div class="text-nowrap table-responsive">
    <table class="table table-hover table-fixed">
      <thead>
        <tr>
          <th scope="col"><%= Department.human_attribute_name(:name) %></th>
          <th scope="col"><%= Department.human_attribute_name(:owner_id) %></th>
          <th scope="col"><%= Department.human_attribute_name(:jobs_count) %></th>
          <th scope="col"><%= Department.human_attribute_name(:industry) %></th>
          <th scope="col"><%= Department.human_attribute_name(:location) %></th>
          <th scope="col"><%= Department.human_attribute_name(:website) %></th>
        </tr>
      </thead>
      <tbody class="align-middle">
        <% @departments.each do |department| %>
          <tr>
            <td><%= link_to department.name, [@account, department], class: "btn btn-link fixed-link", title: department.name %></td>
            <td>
              <%# アイコンを表示する %>
              <span><%= department.owner&.name %></span>
            </td>
            <td><%= department.jobs_count %></td>
            <td class="fixed-text"><%= department.industry %></td>
            <td class="fixed-text"><%= department.location %></td>
            <td class="fixed-text"><%= department.website %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>