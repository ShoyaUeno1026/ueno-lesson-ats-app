<div id="<%= dom_id department %>">
  <div class="py-4">
    <ul class="list-group">
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Department.human_attribute_name(:owner_id) %></strong>
          </div>
          <div class="col-md-8">
            <div class="d-flex align-items-center">
              <%= image_tag image_path(department.owner, size: 40), height: 20, width: 20, class: "rounded me-2" %>
              <span><%= department.owner&.name %></span>
            </div>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Department.human_attribute_name(:name) %></strong>
          </div>
          <div class="col-md-8">
            <%= department.name %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Department.human_attribute_name(:industry) %></strong>
          </div>
          <div class="col-md-8">
            <%= department.industry %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Department.human_attribute_name(:location) %></strong>
          </div>
          <div class="col-md-8">
            <%= department.location %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Department.human_attribute_name(:website) %></strong>
          </div>
          <div class="col-md-8">
            <%= department.website %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Department.human_attribute_name(:description) %></strong>
          </div>
          <div class="col-md-8">
            <%= department.description %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>