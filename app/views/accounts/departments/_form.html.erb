<%= form_with(model: [@account, department]) do |form| %>
  <%= render "shared/error_messages", resource: department %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <hr>
    <p class="h4"><%= t("optional") %></p>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.rich_text_area :description %>
  </div>

  <div class="mb-3">
    <%= form.label :industry, class: "form-label" %>
    <%= form.text_field :industry, placeholder: "IT", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, placeholder: "大分県大分市", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :website, class: "form-label" %>
    <%= form.text_field :website, placeholder: "https://example.com", class: "form-control" %>
  </div>

  <div class="mb-3 d-grid">
    <%= form.submit t("save"), class: "btn btn-primary" %>
  </div>
<% end %>
