<div id="<%= dom_id job %>">
  <div class="py-4">
    <ul class="list-group">
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:department_id) %></strong>
          </div>
          <div class="col-md-8">
            <%= link_to job.department.name, [job.account, job.department] %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:position_name) %></strong>
          </div>
          <div class="col-md-8">
            <%= job.position_name %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:owner_id) %></strong>
          </div>
          <div class="col-md-8">
            <div class="d-flex align-items-center">
              <%= image_tag image_path(job.owner, size: 40), height: 20, width: 20, class: "rounded me-2" %>
              <span><%= job.owner&.name %></span>
            </div>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:visibility) %></strong>
          </div>
          <div class="col-md-8">
            <%= t("job_visibilities." + job.visibility) %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:contract) %></strong>
          </div>
          <div class="col-md-8">
            <% if job.contract.present? %>
              <%= t("job_contracts." + job.contract) %>
            <% end %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:currency) %></strong>
          </div>
          <div class="col-md-8">
            <%= job.currency %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:salary_min) %></strong>
          </div>
          <div class="col-md-8">
            <% if job.salary_min.present? %>
              <%= job.salary_min.to_fs(:delimited) %>
            <% end %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:salary_max) %></strong>
          </div>
          <div class="col-md-8">
            <% if job.salary_max.present? %>
              <%= job.salary_max.to_fs(:delimited) %>
            <% end %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:frequency) %></strong>
          </div>
          <div class="col-md-8">
            <% if job.frequency.present? %>
              <%= t("job_frequencies." + job.frequency) %>
            <% end %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:headcount) %></strong>
          </div>
          <div class="col-md-8">
            <%= job.headcount %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:location) %></strong>
          </div>
          <div class="col-md-8">
            <%= job.location %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:is_remote) %></strong>
          </div>
          <div class="col-md-8">
            <%= job.is_remote ? "可" : "不可" %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="row">
          <div class="col-md-4">
            <strong><%= Job.human_attribute_name(:description) %></strong>
          </div>
          <div class="col-md-8">
            <%= job.description %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>