<nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
  <div class="container mx-auto">
    <%= link_to root_path, class: "navbar-brand" do %>
      <span><%= Settings.application_name %></span>
      <span class="h6 text-decoration-underline"><%= current_user&.name %></span>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <%= render "shared/header_left" %>
      </ul>

      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to t(".announcements"), announcements_path, class: "nav-link" %></li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to notifications_path, class: "nav-link" do %>
              <span><i class="bi bi-bell-fill"></i></span>
            <% end %>
          </li>
          <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <% if current_user.image.attached? %>
                <%= image_tag current_user.image.variant(resize_to_fill: [20, 20]), class: "rounded" %>
              <% else %>
                <i class="bi bi-person"></i>
              <% end %>
            </button>
            <ul class="dropdown-menu">
              <li class="nav-item"><%= link_to t(".profile"), edit_user_registration_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to t(".password"), edit_passwords_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to t(".accounts"), "#", class: "nav-link" %></li>
              <div class="dropdown-divider"></div>
              <li class="nav-item"><%= link_to t(".sign_out"), destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            </ul>
          </div>
        <% else %>
          <li class="nav-item"><%= link_to t(".sign_in"), new_user_session_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to t(".sign_up"), new_user_registration_path, class: "btn btn-primary" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>