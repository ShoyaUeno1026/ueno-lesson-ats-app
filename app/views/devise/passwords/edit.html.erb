<div class="row justify-content-center">
  <div class="col-lg-6">
    <h2><%= t('.change_your_password') %></h2>

    <%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        <div class="form-text"><%= t "password_warning", minimum: @minimum_password_length if @minimum_password_length %></div>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3 d-grid">
        <%= f.submit t(".change_my_password"), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
